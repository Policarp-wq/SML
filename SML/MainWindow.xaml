<Window x:Class="SML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SML"
        xmlns:view ="clr-namespace:SML.Views"
        xmlns:viewModel="clr-namespace:SML.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType ="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType ="{x:Type viewModel:EquationSolverViewModel}">
                <view:EquationSolverView/>
            </DataTemplate>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Blyat" Grid.Column="0" Grid.Row="0"/>
        <ContentControl
            Grid.Column="1"
            Grid.Row="1"
            Margin="10"
            Content="{Binding CurrentVM}"/>
    </Grid>
</Window>
